# TODO: for hoppin and movin, you gotta make sure it moves the focus/window to
# the closest edge of the display you just moved to

# window hoppin
cmd + shift - h : yabai -m window --focus west ; if [[ $? -eq 1 ]]; then yabai -m display --focus west; fi
cmd + shift - j : yabai -m window --focus south ; if [[ $? -eq 1 ]]; then yabai -m display --focus south; yabai -m window --focus south; fi
cmd + shift - k : yabai -m window --focus north ; if [[ $? -eq 1 ]]; then yabai -m display --focus north; yabai -m window --focus north; fi
cmd + shift - l : yabai -m window --focus east ; if [[ $? -eq 1 ]]; then yabai -m display --focus east; fi
ctrl + alt - left : yabai -m window --focus west ; if [[ $? -eq 1 ]]; then yabai -m display --focus west; fi
ctrl + alt - down : yabai -m window --focus south ; if [[ $? -eq 1 ]]; then yabai -m display --focus south; fi
ctrl + alt - up : yabai -m window --focus north ; if [[ $? -eq 1 ]]; then yabai -m display --focus north; fi
ctrl + alt - right : yabai -m window --focus east ; if [[ $? -eq 1 ]]; then yabai -m display --focus east; fi

# window movin
alt + shift - h : yabai -m window --swap west ; if [[ $? -eq 1 ]]; then yabai -m window --display west; fi
alt + shift - j : yabai -m window --swap south ; if [[ $? -eq 1 ]]; then yabai -m window --display south; fi
alt + shift - k : yabai -m window --swap north ; if [[ $? -eq 1 ]]; then yabai -m window --display north; fi
alt + shift - l : yabai -m window --swap east ; if [[ $? -eq 1 ]]; then yabai -m window --display east; fi
ctrl + alt + cmd - left : yabai -m window --swap west ; if [[ $? -eq 1 ]]; then yabai -m window --display west; fi
ctrl + alt + cmd - down : yabai -m window --swap south ; if [[ $? -eq 1 ]]; then yabai -m window --display south; fi
ctrl + alt + cmd - up : yabai -m window --swap north ; if [[ $? -eq 1 ]]; then yabai -m window --display north; fi
ctrl + alt + cmd - right : yabai -m window --swap east ; if [[ $? -eq 1 ]]; then yabai -m window --display east; fi

# zoom
cmd + alt - f : yabai -m window --toggle zoom-fullscreen

# equalize split ratios
cmd + shift - r : yabai -m space --balance

# toggle stack/bsp
cmd + shift - s: yabai -m config layout stack
cmd + shift - b: yabai -m config layout bsp

# restart yabai launch agent
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# desktop jumpin
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
